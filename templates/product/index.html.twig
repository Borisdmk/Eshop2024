{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.description }}</td>
                    <td><img src="{{ asset('/uploads/products/' ~ product.picture) }}" alt="{{ product.title }}" style="max-width: 100px;"></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.stock }}</td>
                    <td>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-info">Voir</a>
                        {# Ajouter d'autres actions si nécessaire, comme éditer ou supprimer #}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {# Ajouter un lien pour créer un nouveau produit si nécessaire #}
    {# <a href="{{ path('app_product_new') }}" class="btn btn-primary">Créer un nouveau produit</a> #}
{% endblock %}
